<div class="container">
  <h3 class="text-center"><%= @trip.trip_name %></h3>
</div>

  <div class="trip-container d-flex flex-column justify-content-center">
    <div class="tod-container">
      <div class="trip-logo"><h2>J</h2></div>

      <div class="trip-tod d-flex">
        <% Activity::TOD.each do |time| %>
          <div class="tod-tab <%= active_class(trip_path(@trip, selected_time: time, selected_day: @selected_day)) %>"><%= link_to time, trip_path(@trip, selected_time: time, selected_day: @selected_day) %></div>
        <% end %>
      </div>

    </div>

    <div class="trip-content d-flex">
      <div class="trip-days d-flex flex-column">
        <% @trip.trip_duration.each do |day| %>
          <div class="day-tab <%= active_class(trip_path(@trip, selected_time: @selected_time, selected_day: day)) %>"><%= link_to day, trip_path(@trip, selected_time: @selected_time, selected_day: day) %></div>
        <% end %>
      </div>
      <div class="day-activity">
        <% if @activity.nil? %>
          <%= "add activity" %>
        <% else %>
        <div class="trip-activity-container">
          <div class="trip-name-container"style="background-image: url(<%= asset_path check_photo(@activity) %>)">
            <h2><%= @activity.name %></h2>
            <div class="trip-activity-rating">
              <% if @activity.reviews.empty? %>
                <% 5.times do %>
                  <div class="star">
                    <i class="far fa-star"></i>
                  </div>
                <% end %>
              <% else %>
                <div class="star">
                  <% @activity.averagerating.times do  %>
                      <i class="fas fa-star"></i>
                  <% end %>
                  <% (5 - @activity.averagerating).times do %>
                      <i class="far fa-star"></i>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="trip-activity-description-container">
          <p>
            <%= @activity.description %>
          </p>
        </div>
        <% end %>
      </div>
    </div>
    <div class="button-row">
      <%= link_to like_trip_path(@trip), method: :post, remote: true do %>
        <div>
          <button class="btn btn-warning triplikes"><%= @trip.likes %> <i class="fas fa-heart"></i></button>
        </div>
      <% end %>
    </div>

  </div>

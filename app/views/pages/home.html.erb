<div class="home">
  <div class="row home-container">
    <div class="col-12">
      <div class="flex-center">
        <!-- <h1 class="title-home">jaunt.</h1> -->
        <img src="<%= image_path('title.svg') %>" class="svg"/>
      </div>
      <div>
        <div class="home-search">
          <%= form_tag activities_path, method: :get do %>
          <div>
            <%= text_field_tag :place, nil, type: "text", placeholder: 'Where are you going?',class: "input-field" %>
          </div>
          <div>
            <%= text_field_tag :days, nil, type: "number", min: "1", max: "7", placeholder: "How many days?", class: "input-field" %>
          </div>
          <div>
            <%= submit_tag 'Plan My Trip', class: "search-btn btn btn-warning" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="container">
  <div class="main-container">
    <div class="user-container">
      <div class="photo-container">
        <% if @user.photo.url.nil? %>
        <%= image_tag("https://images.unsplash.com/photo-1467654032785-f55dc6d6f4bb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80") %>
        <% else %>
        <%= @user.photo %>
        <% end %>
      </div>
      <h2><%= @user.username %></h2>
    </div>
    <div class="bio-container">

    </div>
  </div>
  <div class="name-container">
    <h2><%= @user.first_name %> <%= @user.second_name %></h2>
    <h2><%= @user.email %></h2>
  </div>
  <div class="button-container">
    <div class="btn btn-primary"><%= link_to "My Trips", trips_path %></div>
    <div class="btn btn-primary"><%= link_to "My Reviews", reviews_user_path(current_user) %></div>
    <div class="btn btn-primary"><%= link_to "My Activities", activities_user_path(current_user) %></div>
    <div class="btn btn-primary">
      <%= link_to "Update Bio", edit_user_path(current_user) %> <%= link_to "Update Password", edit_user_registration_path %>
    </div>
  </div>
</div>

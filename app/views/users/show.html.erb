<div class="profile-container">
  <div class="main-container">
    <div class="user-container">
      <div class="photo-container">
        <% if @user.photo.url.nil? %>
        <%= cl_image_tag("https://res.cloudinary.com/nmozzer/image/upload/v1566482236/tgmcoyt93kqshoyunzdb.jpg") %>
        <% else %>
        <%= @user.photo %>
        <% end %>
      </div>
      <h2><%= @user.username %></h2>
    </div>
    <div class="bio-container">
      <%= @user.bio %>
    </div>
  </div>
  <div class="name-container">
    <h2><strong>Name:</strong> <%= @user.first_name %> <%= @user.second_name %></h2>
    <h2><strong>Email:</strong> <%= @user.email %></h2>
  </div>
  <div class="button-container d-flex flex-column">
    <div class="btn user-link"><%= link_to "My Trips", trips_path %></div>
    <div class="btn user-link"><%= link_to "My Reviews", reviews_user_path(current_user) %></div>
    <div class="btn user-link"><%= link_to "My Activities", activities_user_path(current_user) %></div>
    <div class="btn user-link"><%= link_to "Update Bio", edit_user_path(current_user) %> </div>
    <div class="btn user-link"><%= link_to "Update Password", edit_user_registration_path %></div>
  </div>
</div>

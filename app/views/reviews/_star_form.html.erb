<%= simple_form_for([activity, Review.new], remote: true, html: { class: "review_form", onchange: 'Rails.fire(this, "submit")' }) do |f| %>
  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: { class: 'activity-review-select' } %>
  <%= f.button :submit, class: "hidden" %>
<% end %>

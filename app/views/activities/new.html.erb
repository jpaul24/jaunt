<div class="trip-title d-flex justify-content-center flex-column new-activity-head">
  <h4 class="my-trip-title">Add Activity </h4>
</div>
<div class="all-container activity-new">
  <div>
    <% if policy(Activity).create? %>
      <%= simple_form_for @activity do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :city %>
      <%= f.input :tod, label: 'Suggested time of day', collection: ["Morning", "Afternoon", "Evening"]  %>
      <%= f.input :price, placeholder: '$' %>
      <%= f.association :categories %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, "Add this activity", class: "btn btn-warning w-100" %>
        <% end %>
    <% end %>
  </div>
</div>

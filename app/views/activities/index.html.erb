<div class="all-container">

<p>Your search returned <%= @activities.length %> activities:</p>


<div id="viewport">
  <ul class="stack" id="activity-list">
    <% @activities.each do |activity| %>

      <li id="activity_<%= activity.id %>" data-id="<%= activity.id %>">
        <%= render 'activity', activity: activity %>
      </li>


    <% end %>
  </ul>
</div>


<%= render 'activities/filter' %>

<%= link_to "Plan trip", trips_path, method: :post, id:'plan_trip_link' %>

<button id="thumbs_up_btn">thumbs up</button>
<button id="thumbs_dwn_btn">thumbs down</button>

</div>

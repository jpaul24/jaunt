<div class="all-container">

  <% if params[:place] && Activity.search_by_city(params[:place].split.first) == [] %>
      <p>Sorry we don't have any activities in that city, search again!</p>

  <% elsif @activities.length == 0 %>

    <div class="noactivities">
      <p>Sorry, there are no activities for <%= params[:filter][:place] %> in those categories. Try another category!</p>
    </div>

  <% else %>

      <% if @activities.length == 1 %>
        <p>Your search returned <%= @activities.length %> activity:</p>
      <% else %>
        <p>Your search returned <%= @activities.length %> activities:</p>
      <% end %>

    <div id="viewport">

      <ul class="stack" id="activity-list">
        <% @activities.each do |activity| %>
          <li id="activity_<%= activity.id %>" data-id="<%= activity.id %>">
            <%= render 'activity', activity: activity %>
          </li>
          <div class="endoflist">
            <p >That's all the activities </p>
            <p> for <%= activity.city %>, time to </p>
              <p> plan your trip!</p>
          </div>
        <% end %>
      </ul>
    <% if !params.dig(:filter, :categories).present? %>
      <div>
        <p class="" data-toggle="modal" data-target="#filterModal">Filter activities by category</p>
      </div>
    <% elsif params.dig(:filter, :categories).present? %>
      <div>
        <p>Displaying activities for: </p>
          <% categories = params[:filter][:categories] %>
          <% categories.each do |category| %>
            <% if category.to_i > 0 %>
            <% cat = Category.find(category)%>
              <%= cat.name %> |
            <% end %>
          <% end %>

      </div>
    <% end %>

      <%= content_for(:after_js) do %>
        <%= javascript_pack_tag 'components/swing' %>
      <% end %>
    </div>
  <% end %>



    <div class="thum-btns">
      <i id="thumbs_dwn_btn" class="far fa-thumbs-down"></i>
        <h4 class="trip-btn"><%= link_to "Plan trip", trips_path(days: params[:days], cardIds: params[:cardIds]), method: :post, id:'plan_trip_link', remote: false %>
        </h4>
      <i id="thumbs_up_btn" class="far fa-thumbs-up"></i>
    </div>

    <%= render 'activities/filter' %>
</div>


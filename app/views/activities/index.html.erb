<div id="viewport">
  <ul class="stack" id="activity-list">
    <% @activities.each do |activity| %>
      <li id="activity_<%= activity.id %>" data-id="<%= activity.id %>"><p><%= activity.name %></p></li>
    <% end %>
  </ul>
</div>



<h4 class="trip-btn"><%= link_to "Plan trip", trips_path, method: :post, id:'plan_trip_link' %></h4>

<div class="thum-btns">
  <i id="thumbs_dwn_btn" class="far fa-thumbs-down"></i>
  <i id="thumbs_up_btn" class="far fa-thumbs-up"></i>
</div>
<%= content_for(:after_js) do %>
  <%= javascript_pack_tag 'components/swing' %>
<% end %>

<%= render 'activities/filter' %>


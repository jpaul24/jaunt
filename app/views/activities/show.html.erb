<div class="all-container">
  <div class="text-center header-show">
    <h2><%= @activity.name %></h1>
  </div>
  <div class="image-contain">
    <div class="image-show">
    </div>
  </div>
  <div class="show-rating">
    <div class="show-bold">
      <p>Rating:</p>
    </div>
    <div class="show-bold">
      <p>$<%= @activity.price %></p>
    </div>
  </div>
  <div class="show-bold">
    <p><%= @activity.tod %></p>
  </div>
  <div>
    <p><%= @activity.description %></p>
  </div>
  <div>
    <h4>Who else has done this?</h3>
    <div>

    </div>
  </div>
  <div>
    <h4>Reviews</h4>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 250px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

  <div class="thum-vote">
    <i id="dwn_vote" class="far fa-thumbs-down"></i>
    <i id="up_vote" class="far fa-thumbs-up"></i>
  </div>



</div>
